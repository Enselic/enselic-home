// cp ./src/enselic-home/vscode/keybindings.json ./.config/Code/User/keybindings.json
// Place your key bindings in this file to override the defaultsauto[]
[
        {
                "key": "ctrl+alt+left",
                "command": "workbench.action.navigateBack"
        },
        {
                "key": "ctrl+alt+right",
                "command": "workbench.action.navigateForward",
                "when": "canNavigateForward"
        },
        {
                "key": "ctrl+shift+-",
                "command": "-workbench.action.navigateForward",
                "when": "canNavigateForward"
        },
        {
                "key": "ctrl+alt+\\",
                "command": "workbench.action.editorLayoutSingle"
        },
        {
                "key": "ctrl+shift+alt+c",
                "command": "copyFilePath"
        },
        {
                "key": "ctrl+alt+c",
                "command": "-copyFilePath",
                "when": "!editorFocus"
        },
        {
                "key": "shift+escape",
                "command": "workbench.action.terminal.killAll"
        },
        {
                "key": "ctrl+escape",
                "command": "workbench.action.switchWindow"
        },
        {
                "key": "ctrl+shift+alt+c",
                "command": "-copyRelativeFilePath",
                "when": "!editorFocus"
        },
        {
                "key": "ctrl+alt+c",
                "command": "copyRelativeFilePath"
        },
        {
                "key": "ctrl+k ctrl+shift+alt+c",
                "command": "-copyRelativeFilePath",
                "when": "editorFocus"
        },
        {
                "key": "alt+f12",
                "command": "editor.action.goToTypeDefinition"
        },
        {
                "key": "ctrl+alt+right",
                "command": "-workbench.action.moveEditorToNextGroup"
        },
        {
                "key": "ctrl+alt+left",
                "command": "-workbench.action.moveEditorToPreviousGroup"
        },
        {
                "key": "ctrl+m ctrl+c",
                "command": "merge-conflict.accept.current"
        },
        {
                "key": "shift+escape",
                "command": "workbench.action.closePanel"
        },
        {
                "key": "ctrl+m ctrl+b",
                "command": "merge-conflict.accept.both"
        },
        {
                "key": "ctrl+m ctrl+i",
                "command": "merge-conflict.accept.incoming"
        },
        {
                "key": "ctrl+m ctrl+s",
                "command": "merge-conflict.accept.selection"
        },
        {
                "key": "f8",
                "command": "-editor.action.marker.nextInFiles",
                "when": "editorFocus"
        },
        {
                "key": "f8",
                "command": "editor.action.marker.nextInFiles"
        },
        {
                "key": "ctrl+shift+delete",
                "command": "workbench.action.terminal.clear"
        },
        {
                "key": "ctrl+alt+home",
                "command": "workbench.action.terminal.scrollToTop"
        },
        {
                "key": "ctrl+alt+s",
                "command": "cSpell.disableForWorkspace",
                "when": "config.cSpell.enabled"
        },
        {
                "key": "ctrl+alt+s",
                "command": "cSpell.enableForWorkspace",
                "when": "!config.cSpell.enabled"
        },
        {
                "key": "ctrl+shift+alt+s",
                "command": "cSpell.addIgnoreWordsToUser"
        }
]
